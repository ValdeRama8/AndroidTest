<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/mainLyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/back" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="1dp" android:layout_marginTop="8dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="textPersonName"
            android:text="Daftar Sebagai:"
            android:textAlignment="center"
            android:background="#1ec9d7"
            android:textColor="#fff"
            android:textSize="20dp"
            android:ems="10"
            android:paddingTop="20dp"
            android:id="@+id/editText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/daftar_pinjam"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/peminjam"
            android:textColor="#fff"
            android:background="@drawable/rounded_rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="60dp" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginStart="28dp" android:layout_marginEnd="30dp"
            android:id="@+id/daftar_pinjam"
            app:layout_constraintStart_toEndOf="@+id/back" app:layout_constraintHorizontal_bias="0.994"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/back"/>

    <Button
            android:text="@string/pendana"
            android:layout_margin="30dp"
            android:textColor="#fff"
            android:background="@drawable/rounded_rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="60dp" android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/daftar_pendana" app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="331dp"
            app:layout_constraintTop_toBottomOf="@+id/daftar_pinjam"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.060000002"/>

</android.support.constraint.ConstraintLayout>